<div class="container">
    <div class="col-md-offset-3 col-md-6">
        <form method="post" action="/sensors/report">
            <div class="form-group">
                <label for="node">Select Node</label>
                 <select class="form-control" id="node" name="node" required>
                    <option selected>Choose One</option>
                    <option value="ls">Node-1</option>
                    <option value="lc1">Node-2</option>
                    <option value="lc2">Node-3</option>
                 </select>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="1stdate">Starting Date</label>
                    <input type="date" id="1stdate" name="date1" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
                </div>

                <div class="form-group col-md-6">
                    <label for="2nddate">Ending Date</label>
                    <input type="date" id="2nddate" name="date2" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Submit</button>   
        </form>
    </div>
</div>